<%= form_for @current_task, url: @url_hash, html: {:class => "form-task" } do |form| %> 
  <%= t ('form.name')%>        :<br> <%= form.text_field :name, :value => @current_task.name || '' %> <br>
  <%= t ('form.description')%> :<br> <%= form.text_area :description, size: "24x6", :value => @current_task.description || '' %> <br>
  <%= form.submit (t ('form.save')) %>
<% end %>
