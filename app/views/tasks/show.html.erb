<h1><%= t ('.title')%></h1>
<p class="text-info"><%= t('.description')%></p>
<div class="lead"><%= @current_task.name %></div>
<div class="text"><%= @current_task.description %></div>
<div class="inline link"><%= link_to (t('texts.edit')), edit_task_path(@current_task) %></div>
<div class="inline link"><%= link_to (t('texts.destroy')), task_path(@current_task), :data => {:confirm => (t ('texts.are_you_sure'))}, :method => :delete  %></div>